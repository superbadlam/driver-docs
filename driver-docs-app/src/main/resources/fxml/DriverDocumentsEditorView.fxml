<?xml version="1.0" encoding="UTF-8"?>

<!--fx:controller="fxml.DriverDocuments"-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal">
   <top>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <Label text="укажите водителя">
            <HBox.margin>
               <Insets right="15.0"/>
            </HBox.margin>
         </Label>
          <ComboBox fx:id="cmbDrivers" prefWidth="350.0"/>
      </HBox>
   </top>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="10.0">
                    <Label text="Водительское удостоверение"/>
                    <HBox>
                        <TextField fx:id="txtLicSeries" promptText="серия"/>
                        <TextField fx:id="txtLicNumber" promptText="номер"/>
                        <DatePicker fx:id="dtLicStart" promptText="дата начала"/>
                        <DatePicker fx:id="dtLicEnd" promptText="дата окончания"/>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT">
                        <Button fx:id="btnLicApply" mnemonicParsing="false" text="применить"/>
                    </HBox>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </VBox>
                <Separator/>
                <VBox spacing="10.0">
                    <Label text="Медицинская справка"/>
                    <HBox>
                        <TextField fx:id="txtRefSeries" promptText="серия"/>
                        <TextField fx:id="txtRefNumber" promptText="номер"/>
                        <DatePicker fx:id="dtRefStart" promptText="дата начала"/>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT">
                        <Button fx:id="btnRefApply" mnemonicParsing="false" text="применить"/>
                    </HBox>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
