<?xml version="1.0" encoding="UTF-8"?>

<!--fx:controller="fxml.DriverDocuments"-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <Label text="укажите предпринимателя">
                <HBox.margin>
                    <Insets right="15.0"/>
                </HBox.margin>
            </Label>
            <ComboBox fx:id="cmbEmployers" prefWidth="350.0"/>
        </HBox>
    </top>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <VBox spacing="10.0">
                <Label text="Лицензия"/>
                <HBox>
                    <TextField fx:id="txtLicSeries" promptText="серия"/>
                    <TextField fx:id="txtLicNumber" promptText="номер"/>
                    <DatePicker fx:id="dtLicStart" promptText="дата начала"/>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <Button fx:id="btnLicApply" mnemonicParsing="false" text="применить"/>
                    <Button fx:id="btnLicDelete" layoutX="654.0" layoutY="10.0" mnemonicParsing="false" text="удалить"/>
                </HBox>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </VBox>
            <Separator/>
            <VBox spacing="10.0">
                <Label text="Транспорт"/>
                <HBox>
                    <TextField fx:id="txtPlateNo" promptText="гос. номер"/>
                    <TextField fx:id="txtMarka" promptText="марка"/>
                    <TextField fx:id="txtModel" layoutX="181.0" layoutY="10.0" promptText="модель"/>
                    <TextField fx:id="txtSeats" layoutX="352.0" layoutY="10.0" promptText="кол-во мест"/>
                </HBox>
                <HBox layoutX="10.0" layoutY="36.0">
                    <children>
                        <TextField fx:id="txtPassportSeries" promptText="серия ПТС"/>
                        <TextField fx:id="txtPassportNumber" promptText="номер ПТС"/>
                        <TextField fx:id="txtCertificateSeries" layoutX="181.0" layoutY="10.0"
                                   promptText="серия свидетельства"/>
                        <TextField fx:id="txtCertificateNumber" layoutX="352.0" layoutY="10.0"
                                   promptText="номер свидетельства"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <Button fx:id="btnTransportApply" mnemonicParsing="false" text="добавить"/>
                </HBox>
                <TableView fx:id="tblTransports" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="colPlateNo" prefWidth="75.0" text="гос. номер"/>
                        <TableColumn fx:id="colMarka" prefWidth="75.0" text="марка"/>
                        <TableColumn fx:id="colModel" prefWidth="75.0" text="модель"/>
                        <TableColumn fx:id="colSeats" prefWidth="75.0" text="места"/>
                        <TableColumn fx:id="colPassportSeries" prefWidth="75.0" text="серия ПТС"/>
                        <TableColumn fx:id="colPassportNumber" prefWidth="75.0" text="номер ПТС"/>
                        <TableColumn fx:id="colCertificateSeries" prefWidth="75.0" text="серия свидетельства "/>
                        <TableColumn fx:id="colCertificateNumber" prefWidth="75.0" text="свидетельство No"/>
                        <TableColumn fx:id="colDelete" prefWidth="75.0" text="удалить"/>
                    </columns>
                </TableView>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </VBox>
        </VBox>
    </center>
</BorderPane>
